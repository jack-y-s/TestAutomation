{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "resolveJsonModule": true
  },
  "include": ["server.ts", "src/shared/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["src/client/**/*", "node_modules", "dist"]
}
